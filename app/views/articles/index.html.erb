<h1>These are all my articles</h1>
<p>
	<%= link_to "Create new article", new_article_path %> |  <%= link_to "Home", root_path %>
</p>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.description %></td>
			<td>
				<div class="btn-group" role="group" aria-label="...">
			  	<a href=<%= edit_article_path(article) %> class="btn btn-default">Update</a>
			  	<a href=<%= article_path(article) %> class="btn btn-default">Show</a>
			  	<a href=<%= article_path(article) %> :method = "destroy", class="btn btn-default">Deleteroo</a>

				</div>
			</td>
			<td><%= link_to "Update", edit_article_path(article) %></td>
			<td><%= link_to "Show", article_path(article) %></td>
			<td><%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
		</tr>
	<% end %>
	</table>
